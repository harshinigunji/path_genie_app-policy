<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_icon_circle_light"
            android:contentDescription="Back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask a Question"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0F172A"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Get help from the community"
                android:textSize="13sp"
                android:textColor="#64748B"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Question Title Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_question_mark"
                        app:tint="#2563EB"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Question Title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="*"
                        android:textSize="15sp"
                        android:textColor="#EF4444"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/inputTitle"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/bg_input_rounded"
                    android:hint="Eg: Is BCA good after 12th?"
                    android:textSize="14sp"
                    android:textColor="#0F172A"
                    android:textColorHint="#94A3B8"
                    android:inputType="text"
                    android:maxLines="1"/>
            </LinearLayout>

            <!-- Question Description Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_description"
                        app:tint="#2563EB"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Question Description"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="*"
                        android:textSize="15sp"
                        android:textColor="#EF4444"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/inputDescription"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:background="@drawable/bg_input_rounded"
                    android:hint="Explain your question in detail so others can help you better..."
                    android:textSize="14sp"
                    android:textColor="#0F172A"
                    android:textColorHint="#94A3B8"
                    android:inputType="textMultiLine"
                    android:gravity="top"/>
            </LinearLayout>

            <!-- Education Level Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_graduation"
                        app:tint="#2563EB"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Education Level"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="*"
                        android:textSize="15sp"
                        android:textColor="#EF4444"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Select the education level your question relates to"
                    android:textSize="12sp"
                    android:textColor="#6B7280"/>

                <Spinner
                    android:id="@+id/spinnerLevel"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/bg_spinner_rounded"/>
            </LinearLayout>

            <!-- Tips Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_info"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tips for getting better answers"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1E40AF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â€¢ Be specific about your education background\nâ€¢ Include relevant details about your goals\nâ€¢ Check if similar questions exist first"
                    android:textSize="13sp"
                    android:textColor="#3B82F6"
                    android:lineSpacingMultiplier="1.3"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Post Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnPostQuestion"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Post Question"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/bg_primary_button"
            app:backgroundTint="@null"/>
    </LinearLayout>

</LinearLayout>
