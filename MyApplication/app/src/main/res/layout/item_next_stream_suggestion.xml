<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card_white"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp">

    <!-- Stream Icon -->
    <ImageView
        android:id="@+id/streamIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_icon_circle_light"
        android:padding="10dp"
        android:src="@drawable/ic_science"
        app:tint="#2563EB"
        android:importantForAccessibility="no" />

    <!-- Stream Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <!-- MOST RELEVANT Badge (hidden by default) -->
        <TextView
            android:id="@+id/relevantBadge"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="MOST RELEVANT"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_chip_primary"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/streamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science (PCM)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <TextView
            android:id="@+id/streamDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engineering &amp; technical fo..."
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Bookmark Icon -->
    <ImageView
        android:id="@+id/bookmarkIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/bg_circle_light"
        android:padding="8dp"
        android:tint="#2563EB" />

</LinearLayout>
