<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF"
    tools:context=".JobsEducationLevelsPage">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore Jobs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/continueButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your\nEducation Level"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore job opportunities for your qualification."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="12dp" />

            <!-- Education Level Cards Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Row 1: 10th Pass, 12th Science -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/card10thPass"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_selectable"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_10th"
                            android:background="@drawable/bg_icon_circle_light"
                            app:tint="#2563EB"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10th Pass"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card12thScience"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_selectable"
                        android:padding="16dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_science"
                            android:background="@drawable/bg_icon_circle_light"
                            app:tint="#2563EB"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12th Science"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2: 12th Commerce, 12th Arts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/card12thCommerce"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_selectable"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_commerce"
                            android:background="@drawable/bg_icon_circle_light"
                            app:tint="#2563EB"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12th\nCommerce"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:textAlignment="center"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card12thArts"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_selectable"
                        android:padding="16dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_arts"
                            android:background="@drawable/bg_icon_circle_light"
                            app:tint="#2563EB"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12th Arts"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 3: Diploma, Undergraduate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/cardDiploma"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_selectable"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_diploma"
                            android:background="@drawable/bg_icon_circle_light"
                            app:tint="#2563EB"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diploma"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardUndergraduate"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_selectable"
                        android:padding="16dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_undergraduate"
                            android:background="@drawable/bg_icon_circle_light"
                            app:tint="#2563EB"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Undergraduate"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 4: Postgraduate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/cardPostgraduate"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_selectable"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_postgraduate"
                            android:background="@drawable/bg_icon_circle_light"
                            app:tint="#2563EB"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Postgraduate"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>

                    <!-- Empty placeholder for alignment -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Continue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
                android:background="@drawable/bg_primary_button"
                app:backgroundTint="@null"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
