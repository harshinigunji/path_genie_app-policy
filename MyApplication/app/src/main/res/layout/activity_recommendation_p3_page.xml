<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8FAFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Header -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Career Preferences"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0F172A"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Career Preference Section -->
        <TextView
            android:id="@+id/txtCareerPrefTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="Career Preference"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0F172A"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtCareerPrefSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Where do you see yourself working?"
            android:textSize="14sp"
            android:textColor="#64748B"
            app:layout_constraintTop_toBottomOf="@id/txtCareerPrefTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Government / Private Cards -->
        <LinearLayout
            android:id="@+id/careerPrefContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtCareerPrefSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Government Card -->
            <LinearLayout
                android:id="@+id/cardGovt"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_card_selectable"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:src="@drawable/ic_govt"
                    android:importantForAccessibility="no"
                    app:tint="#2563EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Government"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"/>
            </LinearLayout>

            <!-- Private Card -->
            <LinearLayout
                android:id="@+id/cardPrivate"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_card_selectable"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:src="@drawable/ic_private"
                    android:importantForAccessibility="no"
                    app:tint="#2563EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Private"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Difficulty Tolerance Section -->
        <TextView
            android:id="@+id/txtDifficultyTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="Difficulty Tolerance"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0F172A"
            app:layout_constraintTop_toBottomOf="@id/careerPrefContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtDifficultySub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="How challenging should the curriculum be?"
            android:textSize="14sp"
            android:textColor="#64748B"
            app:layout_constraintTop_toBottomOf="@id/txtDifficultyTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Difficulty Options -->
        <LinearLayout
            android:id="@+id/difficultyContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtDifficultySub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Easy Option -->
            <LinearLayout
                android:id="@+id/optionEasy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_selectable"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:src="@drawable/ic_easy"
                    android:importantForAccessibility="no"
                    app:tint="#2563EB"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0F172A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manageable pace, fundamental concepts"
                        android:textSize="12sp"
                        android:textColor="#64748B"/>
                </LinearLayout>

                <View
                    android:id="@+id/radioEasy"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_chip_outline"/>
            </LinearLayout>

            <!-- Medium Option -->
            <LinearLayout
                android:id="@+id/optionMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_selectable"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:src="@drawable/ic_medium"
                    android:importantForAccessibility="no"
                    app:tint="#2563EB"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0F172A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balanced load, steady progression"
                        android:textSize="12sp"
                        android:textColor="#64748B"/>
                </LinearLayout>

                <View
                    android:id="@+id/radioMedium"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_chip_outline"/>
            </LinearLayout>

            <!-- Hard Option -->
            <LinearLayout
                android:id="@+id/optionHard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_selectable"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:src="@drawable/ic_hard"
                    android:importantForAccessibility="no"
                    app:tint="#2563EB"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hard"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0F172A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intensive study, advanced topics"
                        android:textSize="12sp"
                        android:textColor="#64748B"/>
                </LinearLayout>

                <View
                    android:id="@+id/radioHard"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_chip_outline"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Risk Tolerance Section -->
        <TextView
            android:id="@+id/txtRiskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="Risk Tolerance"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0F172A"
            app:layout_constraintTop_toBottomOf="@id/difficultyContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtRiskSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="What is your risk tolerance regarding job stability?"
            android:textSize="14sp"
            android:textColor="#64748B"
            app:layout_constraintTop_toBottomOf="@id/txtRiskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Risk Tolerance Cards -->
        <LinearLayout
            android:id="@+id/riskContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtRiskSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Low Risk Card -->
            <LinearLayout
                android:id="@+id/cardLowRisk"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_card_selectable"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:src="@drawable/ic_shield_low"
                    android:importantForAccessibility="no"
                    app:tint="#2563EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Low"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"/>
            </LinearLayout>

            <!-- Medium Risk Card -->
            <LinearLayout
                android:id="@+id/cardMediumRisk"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_card_selectable"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:src="@drawable/ic_balance"
                    android:importantForAccessibility="no"
                    app:tint="#2563EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Medium"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"/>
            </LinearLayout>

            <!-- High Risk Card -->
            <LinearLayout
                android:id="@+id/cardHighRisk"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_card_selectable"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:src="@drawable/ic_trend_up"
                    android:importantForAccessibility="no"
                    app:tint="#2563EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="High"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Info Card -->
        <LinearLayout
            android:id="@+id/infoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_light"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/riskContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selecting a higher risk tolerance may suggest newer, more volatile career paths with potentially higher rewards."
                android:textSize="12sp"
                android:textColor="#64748B"/>
        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="Continue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
                android:background="@drawable/bg_primary_button"
                app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/infoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
