<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF"
    tools:context=".SystemGenerateP1Page">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#F8FAFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Education Level"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:gravity="center"
            android:layout_marginEnd="24dp" />
    </LinearLayout>

    <!-- Progress Section -->
    <LinearLayout
        android:id="@+id/progressSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 4"
            android:textSize="14sp"
            android:textColor="#6B7280" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25%"
            android:textSize="14sp"
            android:textColor="#2563EB"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/stepProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="25"
        android:progressDrawable="@drawable/bg_progress_bar"
        app:layout_constraintTop_toBottomOf="@id/progressSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/stepProgressBar"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Current\nEducation Level"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:lineSpacingExtra="4dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We'll personalize your career path recommendations based on where you are."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp" />

            <!-- Education Level Options Grid -->
            <GridLayout
                android:id="@+id/optionsGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:columnCount="2"
                android:rowCount="4"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Option 1: 10th Pass -->
                <LinearLayout
                    android:id="@+id/option10th"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_selectable"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_education"
                        android:tint="#2563EB"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10th Pass"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Option 2: 12th Science -->
                <LinearLayout
                    android:id="@+id/option12thScience"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_selectable"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_science"
                        android:tint="#2563EB"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12th Science"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2563EB"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Option 3: 12th Commerce -->
                <LinearLayout
                    android:id="@+id/option12thCommerce"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_selectable"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_commerce"
                        android:tint="#2563EB"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12th Commerce"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Option 4: 12th Arts -->
                <LinearLayout
                    android:id="@+id/option12thArts"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_selectable"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_arts"
                        android:tint="#2563EB"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12th Arts"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Option 5: Diploma -->
                <LinearLayout
                    android:id="@+id/optionDiploma"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_selectable"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_diploma"
                        android:tint="#2563EB"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diploma"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Option 6: Undergraduate -->
                <LinearLayout
                    android:id="@+id/optionUndergraduate"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_selectable"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_undergraduate"
                        android:tint="#2563EB"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Undergraduate"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Option 7: Postgraduate -->
                <LinearLayout
                    android:id="@+id/optionPostgraduate"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_card_selectable"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_postgraduate"
                        android:tint="#2563EB"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="10dp"
                    android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postgraduate"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:text="Next"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
                android:background="@drawable/bg_primary_button"
                app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
