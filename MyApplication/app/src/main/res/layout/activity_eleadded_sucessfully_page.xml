<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF"
    tools:context=".ELEAddedSucessfullyPage">

    <!-- Success Icon with Glow -->
    <FrameLayout
        android:id="@+id/successIconContainer"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Outer Glow -->
        <View
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/bg_success_circle"
            android:layout_gravity="center" />

        <!-- Checkmark Icon -->
        <ImageView
            android:id="@+id/successIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_check"
            android:layout_gravity="center"
            android:contentDescription="Success" />
    </FrameLayout>

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added Successfully!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#111827"
        app:layout_constraintTop_toBottomOf="@id/successIconContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This exam has been added to\nyour career journey."
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="#6B7280"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
