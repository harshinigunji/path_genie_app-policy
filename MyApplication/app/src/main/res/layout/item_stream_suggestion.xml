<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_white"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Stream Header with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/streamIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_science"
            android:background="@drawable/bg_icon_circle_light"
            android:padding="10dp"
            app:tint="#2563EB" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/streamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.Tech Engineering"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:id="@+id/streamDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Years"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="#2563EB" />
    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/streamDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue your education journey with advanced courses and specializations."
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginTop="12dp" />

    <!-- Difficulty Badge -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_chip_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/difficultyLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undergraduate"
            android:textSize="12sp"
            android:textColor="#374151" />
    </LinearLayout>

</LinearLayout>
