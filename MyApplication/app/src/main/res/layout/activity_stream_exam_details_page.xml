<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF"
    tools:context=".StreamExamDetailsPage">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Exam Stage Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_chip_primary"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_cap"
                    android:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/examStageBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NATIONAL LEVEL"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- Exam Name -->
            <TextView
                android:id="@+id/examName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NMMS"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="12dp" />

            <!-- Full Name -->
            <TextView
                android:id="@+id/examFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="National Means-cum-Merit Scholarship Scheme"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp" />

            <!-- Overview Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_white"
                android:padding="16dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_info"
                    android:background="@drawable/bg_circle_light"
                    android:padding="6dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overview"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827" />

                    <TextView
                        android:id="@+id/overviewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A centrally sponsored scholarship exam to identify and support meritorious students from economically weaker sections."
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:lineSpacingMultiplier="1.3"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Conducting Body Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_white"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_building"
                    android:background="@drawable/bg_circle_light"
                    android:padding="6dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONDUCTING BODY"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/conductingBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NCERT / State Education Boards"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- When This Exam Is Required Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¼"
                        android:textSize="18sp"
                        android:textColor="#111827" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When This Exam Is Required"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/eligibilityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligible for scholarship from Class IX to XII"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="8dp" />

                <!-- Tags -->
                <LinearLayout
                    android:id="@+id/tagsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="Financial Support"
                        android:textSize="12sp"
                        android:textColor="#374151"
                        android:background="@drawable/bg_chip_light"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="Merit Recognition"
                        android:textSize="12sp"
                        android:textColor="#374151"
                        android:background="@drawable/bg_chip_light"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Eligibility Snapshot Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eligibility" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eligibility Snapshot"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/eligibilityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- If You Clear This Exam Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_success"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_rocket" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="If You Clear This Exam"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#065F46"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/outcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive scholarship amount annually providing financial support for higher secondary education."
                    android:textSize="14sp"
                    android:textColor="#065F46"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEXT STEP: VERIFICATION"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#16A34A"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- What If You Skip Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_warning"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_warning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What If You Skip / Do Not Clear"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#991B1B"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/skipText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other state/private scholarships available. Focus on academic performance for future opportunities."
                    android:textSize="14sp"
                    android:textColor="#991B1B"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/exploreNextStepButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Explore Next"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
                android:background="@drawable/bg_primary_button"
                app:backgroundTint="@null"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/addToRoadmapButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Add Exam"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
                android:background="@drawable/bg_primary_button"
                app:backgroundTint="@null"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
