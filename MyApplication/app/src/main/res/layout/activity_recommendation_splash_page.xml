<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_circle_white"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- AI Illustration Container -->
    <FrameLayout
        android:id="@+id/aiContainer"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Outer Glow -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ai_glow"/>

        <!-- Center AI Icon -->
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_card_round"
            android:padding="20dp"
            android:src="@drawable/ic_ai_face"/>

        <!-- Floating Icons -->
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_card_round"
            android:padding="10dp"
            android:src="@drawable/ic_graduation"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="18dp"
            android:layout_gravity="bottom|start"
            android:background="@drawable/bg_card_round"
            android:padding="10dp"
            android:src="@drawable/ic_briefcase"
            app:tint="#2563EB"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_sparkle"/>
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Career"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#111827"
        app:layout_constraintTop_toBottomOf="@id/aiContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/txtHighlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendation"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#2563EB"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtEngine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#111827"
        app:layout_constraintTop_toBottomOf="@id/txtHighlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description -->
    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get personalized stream, exam, and job recommendations using AI."
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtEngine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Start Button -->
    <Button
        android:id="@+id/btnStartAI"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:text="Start AI Recommendation"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
                android:background="@drawable/bg_primary_button"
                app:backgroundTint="@null"
        android:drawableStart="@drawable/ic_star"
        android:drawablePadding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
