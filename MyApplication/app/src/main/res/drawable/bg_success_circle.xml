<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow/shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A3B82F6" />
            <size android:width="160dp" android:height="160dp" />
        </shape>
    </item>
    <!-- Inner blue circle -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#3B82F6" />
        </shape>
    </item>
</layer-list>
