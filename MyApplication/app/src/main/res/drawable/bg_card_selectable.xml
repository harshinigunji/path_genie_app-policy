<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - blue border and light blue background -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#EBF5FF"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#2563EB"/>
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F3F4F6"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#3B82F6"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#E5E7EB"/>
        </shape>
    </item>
</selector>
